package com.aurionpro.test;

import java.util.Scanner;

import com.aurionpro.model.Player;

public class GameTest {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		Player player1 = new Player('X');
		Player player2 = new Player('O');
		boolean gameOver = false;

		char matrix[][] = new char[3][3];
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				matrix[i][j] = '_';
			}
		}

		while (!gameOver) {

			System.out.println("Enter the position---->player 1: ");
			int x1 = scanner.nextInt();
			int y1 = scanner.nextInt();

			if (matrix[x1][y1] == '_') {
				player1.setMark(x1, y1, matrix);
				display(matrix);
			}
			else {
				System.out.println("Cannot Enter at that Position , Enter Diffrent one :");
				System.out.println("Enter the position---->player 1: ");
				int x3 = scanner.nextInt();
				int y3 = scanner.nextInt();
				player1.setMark(x3, y3, matrix);
				display(matrix);
			}

			for (int i = 0; i < 3; i++) {
				if (matrix[i][0] == 'X' && matrix[i][1] == 'X' && matrix[i][2] == 'X') {
					display(matrix);
					System.out.println("Player-1 Has WON !!!!!!!");
					gameOver = true;
					break;
				}
			}

			for (int i = 0; i < 3; i++) {
				if (matrix[0][i] == 'X' && matrix[1][i] == 'X' && matrix[2][i] == 'X') {
					display(matrix);
					System.out.println("Player-1 Has WON !!!!!!!");
					gameOver = true;
					break;
				}
			}
			
			if(matrix[0][0] == 'X' && matrix[1][1] == 'X' && matrix[2][2] == 'X') {
				display(matrix);
				System.out.println("Player-1 Has WON !!!!!!!");
				gameOver = true;
				break;
			}
			
			if(matrix[0][2] == 'X' && matrix[1][1] == 'X' && matrix[2][0] == 'X') {
				display(matrix);
				System.out.println("Player-1 Has WON !!!!!!!");
				gameOver = true;
				break;
			}
			

			if (gameOver == true)
				break;

			System.out.println("Enter the position---->player 2: ");
			int x2 = scanner.nextInt();
			int y2 = scanner.nextInt();

			
			if (matrix[x2][y2] == '_') {
				player1.setMark(x2, y2 , matrix);
				display(matrix);
			}
			else {
				System.out.println("Cannot Enter at that Position , Enter Diffrent one :");
				System.out.println("Enter the position---->player 2: ");
				int x4 = scanner.nextInt();
				int y4 = scanner.nextInt();
				player2.setMark(x4, y4, matrix);
				display(matrix);
			}

			for (int i = 0; i < 3; i++) {
				if (matrix[i][0] == 'O' && matrix[i][1] == 'O' && matrix[i][2] == 'O') {
					display(matrix);
					System.out.println("Player-2 Has WON !!!!!!!");
					gameOver = true;
					break;
				}
			}

			for (int i = 0; i < 3; i++) {
				if (matrix[0][i] == 'O' && matrix[1][i] == 'O' && matrix[2][i] == 'O') {
					display(matrix);
					System.out.println("Player-2 Has WON !!!!!!!");
					gameOver = true;
					break;
				}
			}

			if (gameOver == true)
				break;

		}

	}

	private static void display(char[][] matrix) {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				System.out.print(matrix[i][j] + " ");
			}
			System.out.println(" ");
		}
	}

}
