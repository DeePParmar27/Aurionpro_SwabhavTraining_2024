package com.aurionpro.test;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import com.aurionpro.model.Account;

public class AccountTest {
	public static void main(String[] args) {
		
		List<Account> account = new ArrayList<Account>();
		
		Account account1 = new Account(1233, "Deep", 1200);
		Account account2 = new Account(11891, "Harsh", 800);
		Account account3 = new Account(29990, "Nihal", 1000);
		
		Optional<Account> minimumBalance = account.stream().min((number1 , number2)->number1.getAccountBalance()-number2.getAccountBalance());
        if(minimumBalance.isPresent()) {
        	System.out.println(minimumBalance.get());
        }
		
	}

}
